{
  "name": "cv",
  "description": "Curriculum Vitae",
  "version": "1.0.0",
  "author": "Marko MarkoviÄ‡ <okram@civokram.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=14.15.1"
  },
  "dependencies": {
    "vue": "3.3.1"
  },
  "devDependencies": {
    "@iconify-json/tabler": "1.1.74",
    "@unocss/preset-icons": "0.51.12",
    "@unocss/reset": "0.51.12",
    "@unocss/transformer-directives": "0.51.12",
    "@vitejs/plugin-vue": "4.2.2",
    "concurrently": "8.0.1",
    "eslint": "8.40.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-vue": "9.12.0",
    "http-server": "14.1.1",
    "lint-staged": "13.2.2",
    "prettier": "2.8.8",
    "puppeteer": "20.1.2",
    "replace-in-files-cli": "2.1.0",
    "simple-git-hooks": "2.8.1",
    "unocss": "0.51.12",
    "vite": "4.3.5"
  },
  "scripts": {
    "build": "pnpm run build:html && pnpm run build:timestamp && pnpm run build:pdf",
    "build:gh-pages": "vite build --base=/cv/",
    "build:html": "vite build",
    "build:pdf": "concurrently -k -s first 'http-server dist' 'sleep 5 && node src/generatePDF'",
    "build:timestamp": "pnpx replace-in-files --string __LAST_UPDATE__ --replacement `date -I` dist/assets/index-*.js",
    "dev": "vite",
    "lint": "eslint . --ext=.js,.vue --fix",
    "prepare": "pnpx simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpx lint-staged"
  },
  "lint-staged": {
    "**/*.{js,vue}": [
      "pnpm run lint"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es2021": true
    },
    "plugins": [
      "prettier",
      "vue"
    ],
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": [
      "plugin:vue/vue3-recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "vue/no-v-html": "off"
    },
    "ignorePatterns": [
      "**/node_modules",
      "**/dist"
    ]
  }
}

{
  "name": "cv",
  "description": "Curriculum Vitae",
  "version": "1.0.0",
  "author": "Marko MarkoviÄ‡ <okram@civokram.com>",
  "license": "MIT",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=14.15.1"
  },
  "dependencies": {
    "vue": "3.5.13"
  },
  "devDependencies": {
    "@iconify-json/tabler": "1.2.17",
    "@unocss/preset-icons": "65.4.0",
    "@unocss/reset": "65.4.0",
    "@unocss/transformer-directives": "65.4.0",
    "@vitejs/plugin-vue": "5.2.3",
    "concurrently": "9.1.2",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.6",
    "eslint-plugin-vue": "9.32.0",
    "http-server": "14.1.1",
    "lint-staged": "15.5.1",
    "prettier": "3.5.3",
    "puppeteer": "24.6.1",
    "replace-in-files-cli": "3.0.0",
    "simple-git-hooks": "2.12.1",
    "unocss": "65.4.0",
    "vite": "6.2.6",
    "vite-plugin-singlefile": "2.2.0"
  },
  "scripts": {
    "build": "pnpm run build:html && pnpm run build:timestamp && pnpm run build:pdf",
    "build:gh-pages": "vite build --base=/cv/",
    "build:html": "vite build",
    "build:pdf": "concurrently -k -s first 'http-server dist' 'sleep 5 && node src/generatePDF'",
    "build:timestamp": "pnpm dlx replace-in-files-cli --string __LAST_UPDATE__ --replacement `date -I` dist/index.html",
    "dev": "vite",
    "lint": "eslint . --ext=.js,.vue --fix",
    "prepare": "pnpm dlx simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm dlx lint-staged"
  },
  "lint-staged": {
    "**/*.{js,vue}": [
      "pnpm run lint"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es2021": true
    },
    "plugins": [
      "prettier",
      "vue"
    ],
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": [
      "plugin:vue/vue3-recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "vue/no-v-html": "off"
    },
    "ignorePatterns": [
      "**/node_modules",
      "**/dist"
    ]
  }
}
